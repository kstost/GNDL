{
  "manifest_version": 3,
  "name": "GNDL",
  "version": "1.0", 
  "description": "Provides summarization, translation, and text-to-speech features using AI",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "translations.js",
        "content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["styles.css"],
    "matches": ["<all_urls>"]
  }]
}